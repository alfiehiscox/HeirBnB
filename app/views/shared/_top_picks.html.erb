<!-- Displays first 3 from castles array -->
<div class="card-container">
  <div class="row mx-auto my-auto">
    <% @castles.sample(3).each do |castle| %>
    <div class="animated-card col-lg-4">
      <% if castle.photo.attached? %>
        <%= cl_image_tag castle.photo.key, class: "card-img-top" %>
      <% else %>
         <div class="empty-grid-img"> no photo </div>
      <% end %>
      <div class="card-body position-relative">
        <h5 class="card-title"><%= castle.name %></h5>
        <p class="card-text">Â£<%= castle.price_per_night %> <em>per night</em></p>
        <%= link_to "Book Now", castle_path(castle), class: "btn btn-explore stretched-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

