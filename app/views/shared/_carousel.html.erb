<div class="container my-3">
  <div class="row mx-auto my-auto">
    <div id="myCarousel" class="carousel slide w-100" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
        <% @castles.each_slice(4).to_a.each_with_index do |castle_array, index| %>
        <div class="carousel-item py-2 <%= 'active' if index == 0 %>">
          <div class="row">
            <% castle_array.each do |castle| %>
            <div class="clickable-card col-lg-3 col-md-6 mb-4 mb-lg-0">
              <div class="card mb-2">
                <%= link_to "", castle_path(castle), class: "stretched-link" %>
                <!--                             <p class="card-tag-1">Magical</p> -->
                <% if castle.photo.attached? %>
                <%= cl_image_tag castle.photo.key, class: "card-img-top-1" %>
                <% else %>
                <div class="empty-grid-img"> no photo </div>
                <% end %>
                <div class="card-body text-center">
                  <h4 class="card-title"><%= castle.name %></h4>
                  <p class="card-text">Â£<%= castle.price_per_night %> <em>per night</em></p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-12">
    <a class="carousel-control-prev text-dark" href="#myCarousel" role="button" data-slide="prev">
      <span class="fa fa-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next text-dark" href="#myCarousel" role="button" data-slide="next">
      <span class="fa fa-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
