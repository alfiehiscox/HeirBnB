<div class="d-flex flex-column align-items-center justify-content-between mt-4" id="main-container">
    <div class="card" style="width: 40rem;">
      <% if @castle.photo.attached? %>
        <%= cl_image_tag @castle.photo.key, height: 300, width: 639, crop: :fill, id: "show-image"  %>
        <% else %>
        <p>You have no photo</p>
        <% end %>
      <div class="card-body" style="width: 18rem;">
        <h2>Welcome to <%= @castle.name %></h2>
        <strong id="red-word"> <%= @castle.address %> </strong>
        <p> Host: <%= @castle.user.email %></p>

        <div class="container my-5">
            <div class="row">
              <%= simple_form_for [@castle, @booking] do |f| %>
              <%= f.input :start_date, as: :date, html5: true %>
              <%= f.input :end_date, as: :date, html5: true %>
              <%= f.submit %>
              <% end %>
            </div>
            <br>
            <%= link_to "Back", root_path, class: "btn btn-danger" %>
            <br>
            <br>
            <div class="cards" style="width: 40rem;">
              <div id="map"
              style="width:90%; height: 280px; border-radius: 10px; align-items: center;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
              </div>
            </div>
          </div>
        </div>
    </div>
</div>
