<div class="d-flex flex-column align-items-center justify-content-between mt-4" id="main-container">
    <div class="card" style="width: 55rem;">
      <% if @castle.photo.attached? %>
        <%= cl_image_tag @castle.photo.key, height: 300, width: 878, crop: :fill, id: "show-image"  %>
        <% else %>
        <p>You have no photo</p>
        <% end %>
      <div class="card-body" style="width: 55rem;">
        <h2 id="castle-title"><%= @castle.name %></h2>
        <strong id="red-word"> <%= @castle.address %> </strong>
        <p> Host: <%= @castle.user.email %></p>
            <% if @castle.user != current_user %>
              <%= simple_form_for [@castle, @booking] do |f| %>
                <%= f.input :start_date, as: :date, html5: true %>
                <%= f.input :end_date, as: :date, html5: true %>
                <%= f.submit %>
              <% end %>
            <% end %>
            <br>
            <%= link_to "Back", root_path, class: "btn btn-danger" %>
            <br>
            <br>
            <div class="cards" style="width: 55rem;">
              <div id="map"
              style="width:95%; height: 280px; border-radius: 10px; align-items: center;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
              </div>
            </div>
        </div>
    </div>
</div>
