    </div>



    <%= link_to "Back", root_path, class: "btn btn-danger" %>
  </div>
</div>

<div class="container my-5">
    <div class="row">
    <%= simple_form_for [@castle, @booking] do |f| %>
      <%= f.input :start_date, as: :date, html5: true %>
      <%= f.input :end_date, as: :date, html5: true %>
      <%= f.submit %>
    <% end %>
    </div>
</div>



